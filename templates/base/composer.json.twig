{% set escapedNamespace = autoload.namespace|replace({'\\':'\\\\'}) %}
{
  "name": "{{ composer.package.name }}",
  "type": "{{ composer.config.type }}",
  "license": "MIT",
  "version": "0.1.0",
{% block description %}{% endblock description %}
{% block keyword %}{% endblock keyword %}
  "authors": [
    {
      "name": "yoanm",
      "email": "yoanm@users.noreply.github.com",
      "role": "Developer"
    }
  ],
{% block provide %}{% endblock provide %}
{% block suggest %}{% endblock suggest %}
  "support": {
    "issues": "{{ github.url }}/issues"
  },
  "autoload": {
    "psr-0": {
      "{{ escapedNamespace }}": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Technical\\Integration\\{{ escapedNamespace }}\\": "tests/Technical/Integration",
      "Technical\\Unit\\{{ escapedNamespace }}\\": "tests/Technical/Unit",
      "Functional\\{{ escapedNamespace }}\\": "tests/Functional",
      "Functional\\{{ escapedNamespace }}\\BehatContext\\": "features/bootstrap"
    }
  },
  "require": {
    "php": ">=5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "2.*",
    "behat/behat": "~3.0"
  },
  "scripts": {
    "build": [
      "@composer install --prefer-dist --optimize-autoloader --ansi --no-suggest --no-interaction"
    ],
    "build-ci": [
      "mkdir -p build/coverage",
      "@composer install --prefer-dist --ansi --no-suggest --no-interaction"
    ],
    "ci": [
      "@build-ci",
      "@cs",
      "@test"
    ],
    "test": [
      "@t-test",
      "@f-test"
    ],
    "f-test": [
      "./vendor/bin/phpunit --testsuite functional",
      "@behat"
    ],
    "t-test": [
      "./vendor/bin/phpunit --testsuite technical"
    ],
    "behat": [
      "./vendor/bin/behat --no-snippets --colors --format progress"
    ],
    "cs": [
      "./vendor/bin/phpcs"
    ],
    "coverage": [
      "./vendor/bin/phpunit --coverage-html coverage"
    ],
    "coverage-clover": [
      "./vendor/bin/phpunit --coverage-clover build/coverage/clover.xml"
    ]
  }
}
