{% block body %}
language: php

php:
  - '5.5'
  - '5.6'
  - '7.0'

sudo: false

{% block env %}{% endblock env %}
matrix:
  fast_finish: true

{% block install %}
install:
  - composer global require hirak/prestissimo
  - composer build-ci
{% endblock install %}

script:
  - composer test

cache:
  files:
    - composer.lock
  directories:
    - $HOME/.composer
    - vendor
{% endblock body %}
