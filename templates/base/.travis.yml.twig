{% block body %}
language: php

php:
  - '5.5'
  - '5.6'
  - '7.0'

sudo: false

{% block env %}{% endblock env %}
matrix:
  fast_finish: true

{% block before_install %}
before_install:
  - composer global require hirak/prestissimo
{% endblock before_install %}

install:
  - composer build-ci

script:
  - composer test

cache:
  files:
    - composer.lock
  directories:
    - $HOME/.composer
    - vendor
{% endblock body %}
