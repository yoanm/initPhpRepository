{
  "name": "%composer.package.name%",
  "type": "%composer.config.type%",
  "license": "MIT",%composer.config.extra.version%%composer.config.extra.description%%composer.config.extra.keyword%
  "authors": [
    {
      "name": "yoanm",
      "email": "yoanm@users.noreply.github.com",
      "role": "Developer"
    }
  ],%composer.config.extra.provide%%composer.config.extra.suggest%
  "support": {
    "issues": "https://%git.repository.url%/issues"
  },
  "autoload": {
    "psr-0": {
      "%autoload.namespace.psr_0%": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Technical\\Integration\\%autoload.namespace.psr_0%\\": "tests/Technical/Integration",
      "Technical\\Unit\\%autoload.namespace.psr_0%\\": "tests/Technical/Unit",
      "Functional\\%autoload.namespace.psr_0%\\": "tests/Functional",
      "Functional\\%autoload.namespace.psr_0%\\BehatContext\\": "features/bootstrap"
    }
  },
  "require": {
    "php": ">=5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "2.*",
    "behat/behat": "~3.0"
  },
  "scripts": {
    "build": [
      "@composer install --prefer-dist --optimize-autoloader --ansi --no-suggest --no-interaction"
    ],
    "build-ci": [
      "mkdir -p build/coverage",
      "@composer install --prefer-dist --ansi --no-suggest --no-interaction"
    ],
    "ci": [
      "@build-ci",
      "@cs",
      "@test"
    ],
    "test": [
      "@t-test",
      "@f-test"
    ],
    "f-test": [
      "./vendor/bin/phpunit --testsuite functional",
      "./vendor/bin/behat --no-snippets --strict --colors --format progress"
    ],
    "t-test": [
      "./vendor/bin/phpunit --testsuite technical"
    ],
    "cs": [
      "./vendor/bin/phpcs"
    ],
    "coverage": [
      "./vendor/bin/phpunit --coverage-html coverage"
    ],
    "coverage-clover": [
      "./vendor/bin/phpunit --coverage-clover build/coverage/clover.xml"
    ]
  }
}
